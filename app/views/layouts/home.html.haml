!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "QuickSpot"
      %meta{:content => content_for?(:description) ? yield(:description) : "QuickSpot", :name => "description"}
        %link{:href => "http://fonts.googleapis.com/css?family=Arvo|PT+Sans", :rel => "stylesheet", :type => "text/css"}
        = stylesheet_link_tag "application", :media => "all"
        = csrf_meta_tags
        = yield(:head)
  %body
    = yield
    = javascript_include_tag "application"